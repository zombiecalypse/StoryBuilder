-title 'Stories'
- @stories.each do |story|
  %section.listing
    %h1= link_to story.title, story
    = image_tag(story.picture.url(:thumb))
    .text
      -if story.mood.present?
        .mood
          %b Mood:
          = story.mood
      =truncate(story.description, :length => story.shortness_threshold, :separator => ' ', :omission => 'â€¦')
    %section
      -if not story.subplots.empty?
        %h1 Subplots
        %ul
          - story.subplots.each do |subplot|
            %li= link_to subplot.title, subplot
%hr.nav
= link_to 'New Story', new_story_path
